@model CreateGradeViewModel
@{
    ViewData["Title"] = "Създаване на клас";
}

<section class="section">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>@ViewData["Title"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Grade_number">Клас:</label>
                    <select asp-for="Grade_number" class="form-control" resize="vertical">
                        <option value="">Моля изберете клас</option>
                        @for (var i = 1; i <= 12; i++)
                        {
                            <option value="@i"> @i</option>
                        }
                    </select>
                    <span asp-validation-for="Grade_number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade_letter">Паралелка:</label>

                    <select asp-for="Grade_letter" class="form-control" resize="vertical">
                        <option value="">Моля изберете паралелка</option>
                        <option value="А">А</option>
                        <option value="Б">Б</option>
                        <option value="В">В</option>
                        <option value="Г">Г</option>
                        <option value="Д">Д</option>
                        <option value="Е">Е</option>
                        <option value="Ж">Ж</option>
                        <option value="З">З</option>
                        <option value="И">И</option>
                    </select>
                    <span asp-validation-for="Grade_letter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Teacher_Id">Класен ръководител:</label>
                    @Html.DropDownListFor(x => x.Teacher_Id, (IEnumerable<SelectListItem>)ViewBag.Teacher_Id, "Моля изберете класен ръководител", new { @class = "form-control" })
                    <span asp-validation-for="Teacher_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Active">Активно:</label>
                    <select asp-for="Active" class="form-control" resize="vertical">
                        <option value="0">Не</option>
                        <option value="1" selected>Да</option>
                    </select>
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning m-md-top">Запазване</button>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")


}
