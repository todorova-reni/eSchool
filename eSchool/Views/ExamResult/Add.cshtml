@model AddExamResultViewModel
@{
    ViewData["Title"] = "Добавяне на оценка";
}

<section class="section">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <h2>@ViewData["Title"]</h2>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>Добави резултати на @ViewData["StudName"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Student_Id" type="hidden" value="@ViewData["studId"]" />
                </div>
                <div class="form-group">
                    <label asp-for="Course_Id">Предмет:</label>
                    @Html.DropDownListFor(x => x.Course_Id, (IEnumerable<SelectListItem>)ViewBag.Course_Id, new { @class = "form-control" })
                    <span asp-validation-for="Course_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade">Оценка:</label>
                    <select asp-for="Grade" class="form-control">
                        <option value="">Моля изберете...</option>
                        <option value="6">6</option>
                        <option value="5">5</option>
                        <option value="4">4</option>
                        <option value="3">3</option>
                        <option value="2">2</option>
                    </select>
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                <button id="SaveRes" type="submit" class="btn btn-warning m-md-top">Запиши</button>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
